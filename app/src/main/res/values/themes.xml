<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WomanSafety" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="toolbarStyle">@style/AppToolBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>


    <style name="AppToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/AppToolBarTitleTextAppearance</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="AppToolBarTitleTextAppearance">
        <item name="android:fontFamily"></item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>