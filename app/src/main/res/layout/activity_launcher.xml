<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <requestFocus />
    </View>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_hori_20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_hori_60"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_hori_20" />






    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_launcher"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@id/guide_hori_60"
        app:layout_constraintLeft_toLeftOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/layout_enroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/img_enroll"
            style="@style/wrap_wrap"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_escalator_warning_24"
            app:layout_constraintBottom_toTopOf="@id/txt_enroll"
            app:layout_constraintLeft_toLeftOf="@id/txt_enroll"
            app:layout_constraintRight_toRightOf="@id/txt_enroll" />

        <TextView
            android:id="@+id/txt_enroll"
            style="@style/wrap_wrap"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Guardian Login"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/layout_login_rbk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/img_login"
            style="@style/wrap_wrap"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_face_24"
            app:layout_constraintBottom_toTopOf="@id/txt_login"
            app:layout_constraintLeft_toLeftOf="@id/txt_login"
            app:layout_constraintRight_toRightOf="@id/txt_login" />

        <TextView
            android:id="@+id/txt_login"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/_30sdp"
            android:text="Login"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_swap"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/shape_button_neutral"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_swap_hand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        style="@style/wrap_wrap"
        android:layout_marginBottom="@dimen/_20sdp"

        android:clickable="false"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>